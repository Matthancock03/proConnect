<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#25AAA0"
    tools:context="com.example.brandon.proconnect.BeginningInfoPage">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Information"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:id="@+id/EditProfileText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="First Name:"
            android:id="@+id/FirstNameText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/loginstyle"
            android:id="@+id/FirstNameEdit"
            android:layout_alignTop="@+id/FirstNameText"
            android:layout_toRightOf="@+id/FirstNameText"
            android:layout_toEndOf="@+id/FirstNameText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Last Name:"
            android:id="@+id/LastNameText"
            android:layout_below="@+id/FirstNameText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="44dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current Employer:"
            android:id="@+id/CurrentEmployerText"
            android:layout_below="@+id/LastNameText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="44dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Recent School:"
            android:id="@+id/RecentSchoolText"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/CurrentEmployerText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location:"
            android:id="@+id/LocationText"
            android:layout_below="@+id/RecentSchoolText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Experience:"
            android:id="@+id/ExperienceText"
            android:layout_below="@+id/LocationText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="42dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/LastNameEdit"
            android:background="@drawable/loginstyle"
            android:layout_alignTop="@+id/LastNameText"
            android:layout_alignLeft="@+id/FirstNameEdit"
            android:layout_alignStart="@+id/FirstNameEdit" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/CurrentEmployerEdit"
            android:background="@drawable/loginstyle"
            android:layout_alignTop="@+id/CurrentEmployerText"
            android:layout_toRightOf="@+id/CurrentEmployerText"
            android:layout_toEndOf="@+id/CurrentEmployerText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/LocationEdit"
            android:background="@drawable/loginstyle"
            android:layout_alignTop="@+id/LocationText"
            android:layout_toRightOf="@+id/LocationText"
            android:layout_toEndOf="@+id/ExperienceText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/ExperienceEdit"
            android:background="@drawable/loginstyle"
            android:layout_alignTop="@+id/ExperienceText"
            android:layout_alignLeft="@+id/LastNameEdit"
            android:layout_alignStart="@+id/LastNameEdit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Education:"
            android:id="@+id/EducationText"
            android:layout_below="@+id/ExperienceText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="42dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Projects:"
            android:id="@+id/ProjectText"
            android:layout_below="@+id/EducationText"
            android:layout_marginTop="44dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Profile Picture"
            android:id="@+id/ProfilePictureText"
            android:layout_below="@+id/AboutMeText"
            android:layout_marginTop="44dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/EducationEdit"
            android:background="@drawable/loginstyle"
            android:layout_alignTop="@+id/EducationText"
            android:layout_toRightOf="@+id/EducationText"
            android:layout_toEndOf="@+id/EducationText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/ProjectEdit"
            android:background="@drawable/loginstyle"
            android:layout_alignTop="@+id/ProjectText"
            android:layout_toRightOf="@+id/LocationText"
            android:layout_toEndOf="@+id/LocationText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/RecentSchoolEdit"
            android:background="@drawable/loginstyle"
            android:layout_alignTop="@+id/RecentSchoolText"
            android:layout_toRightOf="@+id/RecentSchoolText"
            android:layout_toEndOf="@+id/RecentSchoolText" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Choose Picture"
            android:id="@+id/PictureButton"
            android:layout_alignTop="@+id/ProfilePictureText"
            android:layout_toRightOf="@+id/ProfilePictureText"
            android:layout_toEndOf="@+id/ProfilePictureText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/InfoSubmitButton"
            android:layout_below="@+id/ProfilePictureText"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/CurrentEmployerText"
            android:layout_toEndOf="@+id/CurrentEmployerText"
            android:layout_marginTop="100dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/InfoThumbnail"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="About me:"
            android:id="@+id/AboutMeText"
            android:layout_below="@+id/ProjectText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="44dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/AboutMeEdit"
            android:background="@drawable/loginstyle"
            android:layout_alignTop="@+id/AboutMeText"
            android:layout_toRightOf="@+id/AboutMeText"
            android:layout_toEndOf="@+id/AboutMeText" />
    </RelativeLayout>



</ScrollView>
