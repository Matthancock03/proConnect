<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#25AAA0"
    tools:context="com.example.brandon.proconnect.RegisterPremiumUser">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Premium Registration"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        android:id="@+id/PremiumRegistrationTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:id="@+id/PremiumPasswordText"
        android:layout_below="@+id/PremiumEmailText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirm Password:"
        android:id="@+id/PremiumConfirmPasswordText"
        android:layout_below="@+id/PremiumPasswordText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email:"
        android:id="@+id/PremiumEmailText"
        android:layout_below="@+id/PremiumRegistrationTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Company Name:"
        android:id="@+id/CompanyNameText"
        android:layout_below="@+id/PremiumConfirmPasswordText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Profile Picture"
        android:id="@+id/PremiumProfilePictureText"
        android:layout_below="@+id/CompanyNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Choose File"
        android:id="@+id/PremiumProfilePictureButton"
        android:layout_alignTop="@+id/PremiumProfilePictureText"
        android:layout_toRightOf="@+id/PremiumProfilePictureText" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/PremiumRegisterSubmitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/PremiumRegistrationTitle"
        android:layout_alignStart="@+id/PremiumRegistrationTitle"
        android:layout_marginBottom="54dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/loginstyle"
        android:id="@+id/PremiumPasswordEdit"
        android:layout_alignTop="@+id/PremiumPasswordText"
        android:layout_toRightOf="@+id/PremiumPasswordText"
        android:layout_toEndOf="@+id/PremiumPasswordText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/loginstyle"
        android:id="@+id/PremiumConfirmPasswordEdit"
        android:layout_alignTop="@+id/PremiumConfirmPasswordText"
        android:layout_toRightOf="@+id/PremiumConfirmPasswordText"
        android:layout_toEndOf="@+id/PremiumConfirmPasswordText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/loginstyle"
        android:id="@+id/PremiumEmailEdit"
        android:layout_alignTop="@+id/PremiumEmailText"
        android:layout_toRightOf="@+id/PremiumEmailText"
        android:layout_toEndOf="@+id/PremiumEmailText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/loginstyle"
        android:id="@+id/ComanyNameEdit"
        android:layout_alignTop="@+id/CompanyNameText"
        android:layout_toRightOf="@+id/CompanyNameText"
        android:layout_toEndOf="@+id/CompanyNameText" />

</RelativeLayout>
