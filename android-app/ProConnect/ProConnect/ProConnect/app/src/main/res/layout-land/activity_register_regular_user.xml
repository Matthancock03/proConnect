<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#25AAA0"
    tools:context="com.example.brandon.proconnect.RegisterRegularUser">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Regular Registration"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:id="@+id/RegularRegistrationTitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Password"
            android:id="@+id/RegularPasswordText"
            android:layout_below="@+id/RegularEmailText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Confirm Password:"
            android:id="@+id/RegularConfirmPasswordText"
            android:layout_below="@+id/RegularPasswordText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email:"
            android:id="@+id/RegularEmailText"
            android:layout_below="@+id/RegularRegistrationTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Profile Picture"
            android:id="@+id/RegularProfilePictureText"
            android:layout_below="@+id/RegularConfirmPasswordText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Choose File"
            android:id="@+id/RegularProfilePictureButton"
            android:layout_alignTop="@+id/RegularProfilePictureText"
            android:layout_toRightOf="@+id/RegularProfilePictureText"
            android:layout_toEndOf="@+id/RegularProfilePictureText" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/RegularSubmitButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/RegularThumbnail"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/loginstyle"
            android:id="@+id/RegularPasswordEdit"
            android:layout_alignTop="@+id/RegularPasswordText"
            android:layout_toRightOf="@+id/RegularPasswordText"
            android:layout_toEndOf="@+id/RegularPasswordText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/loginstyle"
            android:id="@+id/RegularConfirmPasswordEdit"
            android:layout_alignTop="@+id/RegularConfirmPasswordText"
            android:layout_toRightOf="@+id/RegularConfirmPasswordText"
            android:layout_toEndOf="@+id/RegularConfirmPasswordText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/loginstyle"
            android:id="@+id/RegularEmailEdit"
            android:layout_alignTop="@+id/RegularEmailText"
            android:layout_toRightOf="@+id/RegularEmailText"
            android:layout_toEndOf="@+id/RegularEmailText" />


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/RegularThumbnail"
            android:layout_below="@+id/RegularProfilePictureButton"
            android:layout_toRightOf="@+id/RegularProfilePictureButton"
            android:layout_toEndOf="@+id/RegularProfilePictureButton" />

        </RelativeLayout>



</ScrollView>
